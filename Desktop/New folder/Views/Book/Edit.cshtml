<h1>Edit book: </h1>
<form asp-action="Edit" asp-route-Id="@Model.Id">
    <div class="form-group">
        <label for="book's title'">Title</label>
        <input type="text" class="form-control" name="title" placeholder="Enter title" value="@Model.Title">
    </div>
    <div class="form-group">
        <label for="book's author'">Author</label>
        <input type="text" class="form-control" name="author" placeholder="Enter author" value="@Model.Author">
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Confirm changes</button>
        <a asp-action="Index" asp-controller="Book">
            <button type="button" class="btn btn-secondary">Cancel</button>
        </a>
    </div>
</form>